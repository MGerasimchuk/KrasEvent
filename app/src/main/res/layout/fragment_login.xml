<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <!--TODO: Update blank fragment layout-->

    <EditText
        android:id="@+id/view_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Логин"
        android:editable="true"
        android:linksClickable="false"
        android:backgroundTint="#ff2b2b2b"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/view_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Пароль"
        android:editable="true"
        android:linksClickable="false"
        android:backgroundTint="#ff2b2b2b"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:inputType="textPassword" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <TextView
            style="@style/SigninButton"
            android:id="@+id/view_submit"
            android:background="#ff2b2b2b"
            android:text="Войти"
            android:layout_height="40dp"
            android:layout_width="match_parent"/>

        <ProgressBar
            style="@android:style/Widget.Holo.ProgressBar"
            android:id="@+id/view_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/view_submit"
            android:layout_alignTop="@id/view_submit"
            android:layout_alignBottom="@id/view_submit"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>
